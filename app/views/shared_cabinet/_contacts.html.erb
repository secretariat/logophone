<article class="element fx-slide-up home clearfix one-full about isotope-item">
  <div class="reveal-bg-nine">
    <center><h2 class="pad pad-top-minus pad-bottom-minus"><%= t 'ccontacts.title' %></h2></center>
  </div>
</article>
<% i = 0 %>
<% @logos.each do |logo| %>
  <article class="element fx-slide-out clearfix one-third home overflow" style="height:470px;">
    <!-- <a href="images/content/01.jpg" title="" class="popup"> -->
    <div class="images" style="margin-bottom: 15px;">
        <div class="layerscab">
          <% layer = 1 %>
          <% logo.logo_files.split(',').each do |file| %>
            <% next if file.size == 0%>
            <%if file =~ /output\/[15]/ or file =~ /output\/uzor\/[15]/ or file =~ /output\/glasses\/[15]/ %>
            <%= image_tag file, :class => "m1m5 imgl"+layer.to_s,:alt => "logophone"%>
            <%else%>
              <%= image_tag file, :class => "m1m0 imgl"+layer.to_s,:alt => "logophone"%>
            <% end %>
            <% layer +=1 %>
          <% end %>
        </div>
    </div>
    <center>
      <%= link_to( "#{ t 'buttons.delete'}", creator_destroy_path(:id => logo.id), :method => :delete,  :class => "btn-delete", :confirm => "#{ t 'btn.sure'}") %>
    </center>

    <div class="inner-panel reveal-bg-<%= @colors[i] %>">
      <div class="thumb pad pad-bottom-minus" style="padding:0;"></div>
      <center>
        <% if logo.first_name != "" && logo.first_name != ""%>
          <h2 class="pad pad-top-minus mh2"><%= logo.first_name %> <%= logo.last_name %></h2>
          <h5 class="mp0"><%=logo.phone %></h5>
        <% else  %>
          <h2 class="pad pad-top-minus mh2"><%=logo.phone %></h2><h5 class="mp0">&nbsp</h5>
        <% end %>
      </h2></center>
    </div>
    </a>
  </article>
  <% i += 1 %>
  <% i = 1 if i == 8 %>
<% end %>