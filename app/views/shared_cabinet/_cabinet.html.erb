<header id="wrapper">
    <div id="options" class="clearfix visible-desktop">
        <div class="place-right">
            <%= link_to "RU", :controller => "page", :action => "set_ru" %>
            <%= link_to "EN", :controller => "page", :action => "set_en"%>
        </div>
        <ul id="filters" class="option-set clearfix">
            <li><%= link_to "#{t 'menu.logophone'}", page_index_path, :class => "reveal-bg-one selected" %></li>
            <li><%= link_to "#{t 'cmenu.mycontacts'}", cabinet_index_path, :style =>"background-color:#21C4F0;" %></li>
            <li><%= link_to "#{t 'menu.create'}", creator_new_path, :class =>"reveal-bg-seven", :style => "width: 150px;" %></li>
            <li><%= link_to "#{t 'cmenu.info'}", cabinet_info_path, :class =>"reveal-bg-two" %></li>
            <li><%= link_to "#{t 'cmenu.table'}", cabinet_table_path, :class =>"reveal-bg-nine" %></li>
            <li><%= link_to "#{t 'cmenu.intro'}", cabinet_intro_path, :class =>"reveal-bg-four"%></li>
            <li><%= link_to "#{t 'cmenu.train'}", cabinet_training_path, :class =>"reveal-bg-six" %></li>
            <li><%= link_to "#{t 'cmenu.test'}", cabinet_test_path, :class =>"reveal-bg-five" %></li>
            <li><%= link_to "#{t 'cmenu.logout'}", destroy_user_session_path, :method => :delete, :class =>"reveal-bg-three" %></li>
            <% if @theme.present? && @theme == "dark" %>
                <br>
                <li><%= link_to "#{t 'menu.light'}", {:controller => "page", :action => "set_light"}, :style=>"background-color:#fff !important;color:#000;"%></li>
            <%  else %>
                <br>
                <li><%= link_to "#{t 'menu.dark'}", {:controller => "page", :action => "set_dark"}, :style=>"background-color:#000 !important;"%></li>
            <%  end %>
        </ul>
    </div>
</header>