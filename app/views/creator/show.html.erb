<article class="element fx-slide-up home clearfix one-full about isotope-item">
  <div class="reveal-bg-nine">
    <center><h2 class="pad pad-top-minus pad-bottom-minus">Your logo</h2></center>
  </div>
</article>
<article class="element clearfix home pp">
	<div class="mcenter">
		<div class="layersw">
			<div class="layers">
				<div class="bg-switch">
				<%= link_to image_tag("left.png",:style=>"float:left;"), :controller => "creator", :action => :chbgm, :phone => params[:phone], :remote => true %>
				<% if @theme.present? && @theme == "dark" %>
					<div class="logosliderp lt"><center>BACKGROUND</center></div>
				<% else %>
					<div class="logosliderp"><center>BACKGROUND</center></div>
				<% end %>
				<%= link_to image_tag("right.png",:style=>"float:right;"), :controller => "creator", :action => :chbgm, :phone => params[:phone], :remote => true %>
				</div>
				<div id="ctrs">
					<%= render 'crt'%>
				</div>
				<div id="chlogo">
					<%= render 'logo', :ar => @ar %>
				</div>
				<div class="cls"></div>
				<% if @block_logo_size > 1 then%>
					<div class="bg-switch dwn">
						<%= link_to image_tag("left.png",:style=>"float:left;"), :controller => "creator", :action => :chlgp, :phone => params[:phone], :remote => true %>
						<% if @theme.present? && @theme == "dark" %>
							<div class="logosliderp dwn lt"><center>CHARACTER</center></div>
						<% else %>
							<div class="logosliderp dwn "><center>CHARACTER</center></div>
						<% end %>
						<%= link_to image_tag("right.png",:style=>"float:right;"), :controller => "creator", :action => :chlgp, :phone => params[:phone], :remote => true %>
					</div>
				<% end %>
			</div>
			<%if user_signed_in? %>
				<div class="saveasblock reveal-bg-two">
					<%= form_for( @logo, :url => {:action => 'create'} ) do |f| %>
						<div style="width:60%; float: left;">
		          <%= f.text_field :phone, :value => params[:phone], :readonly => true%>
							<%= f.text_field :first_name, :placeholder=>"First name"  %>
							<%= f.text_field :last_name, :placeholder=>"Last name"%>
						</div>
						<div style="width:40%; float: right; padding-top: 20px;">
							<%= submit_tag("Save logo", :class => "mbutton") %>
						</div>
					<% end %>
				</div>
			<% else %>
				<center><h3><u><%= link_to "Login", new_user_session_path%></u> to save the logo</h3></center>
			<% end %>
		</div>
	</div>
</article>
