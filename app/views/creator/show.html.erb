<article class="element fx-slide-up home clearfix one-full about isotope-item">
  <div class="reveal-bg-nine">
    <center><h2 class="pad pad-top-minus pad-bottom-minus">Your logo</h2></center>
  </div>
</article>
<article class="element clearfix home pp">
	<div class="mcenter">
		<div class="layersw">
			<div class="layers">
				<% @ar.each do |a| %>
					<%= image_tag a, :class => "m1m1", :alt => ""  %>
				<% end %>
			</div>
				<%if user_signed_in? %>
					<div class="saveasblock reveal-bg-two">
						<%= form_for( @logo, :url => {:action => 'create'} ) do |f| %>  
							<div style="width:70%; float: left;">   
		                  	<%= f.text_field :phone, :value => params[:phone], :readonly => true%>
							<%= f.text_field :first_name, :placeholder=>"First name"  %>
							<%= f.text_field :last_name, :placeholder=>"Last name"%>
							</div>
							<div style="width:30%; float: right; padding-top: 20px;">   
								<%= submit_tag("Save logo", :class => "mbutton") %>
							</div>
						<% end %>
					</div>
				<% end %>
		</div>
	</div>
</article>

