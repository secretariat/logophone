<footer id="mastfoot">
  <section class="container" style="margin-top:0px;background:#000;">
    <div class="row-fluid">
      <article class="span6 mob-center">
        <%= image_tag("foot_logo.jpg", :id => "footlogo") %>
        <p class="slogan"><%= "#{t 'footer.slogan'}"%></p>
      </article>
      <article class="span6 text-right">
        <ul id="foot-icons" class="clearfix">
          <li><a href="#"><%= image_tag("social/footer_dribbble.png") %></a></li>
          <li><a href="#"><%= image_tag("social/footer_facebook.png") %></a></li>
          <li><a href="#"><%= image_tag("social/footer_twitter.png") %></a></li>
        </ul>
        <p class="copyright" ><%= "#{t 'footer.created'}"%></p>
      </article>
    </div>
  </section>
</footer>

