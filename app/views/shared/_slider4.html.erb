<article class="element fx-slide-up home clearfix one-third index index4">
  <div class="images">
    <%= image_tag("#{@theme}/index/main_4.png") %>
  </div>
  <div class="content-bottom content-bottom-alt reveal-bg-two">
    <div class="thumb pad pad-bottom-minus">
    </div>
    <h2 class="pad pad-top-minus pad-bottom-minus" style="height:80px;"><%= t 'index.like-header'%></h2>
    <p class="pad pad-top-minus" style="height: 100px;overflow:hidden;"><%= t 'index.like-short'%>
    </p>
    <div class="pad pad-top-minus">
      <%= link_to "#{t 'buttons.read_full'}", "#filter=.index%3Anot(.index4),+.post4", :class => "btn btn-reveal" %>
    </div>
  </div>
</article>

<article class="element  clearfix two-third post4">
  <div class="images"><%= image_tag("#{@theme}/index/index4.jpg") %>
  </div>
  <div class="content-bottom reveal-bg-two">
    <h2 class="pad pad-bottom-minus"><%= t 'index.like-header' %></h2>
    <p class="pad pad-top-minus pad-bottom-minus"><%= (t 'index.like-full').html_safe %></p>
    <p class="pad pad-top-minus pad-bottom-minus"><%= t 'index.like-fun' %></p>
    <p class="pad pad-top-minus pad-bottom-minus"><%= t 'index.like-thanks' %></p>
  </div>
</article>




