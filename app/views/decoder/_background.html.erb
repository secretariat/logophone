<article class="element fx-slide-up home clearfix one-third index3">
  <div class="images">
    <%= image_tag("#{@theme}/decoder/back_main.jpg") %>
  </div>
  <div class="content-bottom content-bottom-alt reveal-bg-five">
    <div class="thumb pad pad-bottom-minus">
    </div>
    <h2 class="pad pad-top-minus pad-bottom-minus"  style="height:80px;"><%= t 'decoding.background' %></h2>
    <p class="pad pad-top-minus" style="height: 100px;overflow:hidden;"><%= t 'decoding.background-short' %></p>
    <div class="pad pad-top-minus">
      <%= link_to "#{t 'buttons.read_full'}", "#filter=.home%3Anot(.index3),+.post3", :class => "btn btn-reveal" %>
    </div>
  </div>
</article>

<article class="element  clearfix two-third post3">
  <div class="images"><%= image_tag("#{@theme}/index/index1.jpg") %>
  </div>
  <div class="content-bottom reveal-bg-five">
    <h2 class="pad pad-bottom-minus"><%= "#{t 'decoding.background'}"%></h2>
    <p class="pad pad-top-minus pad-bottom-minus">
      <%= (t 'decoding.background-full').html_safe %>
    </p>
   </div>
</article>