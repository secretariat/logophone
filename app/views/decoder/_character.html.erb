<article class="element fx-slide-up home clearfix one-third index2">
  <div class="images">
    <%= image_tag("#{@theme}/decoder/pers_main.png") %>
  </div>
  <div class="content-bottom content-bottom-alt reveal-bg-one">
    <div class="thumb pad pad-bottom-minus">
    </div>
    <h2 class="pad pad-top-minus pad-bottom-minus"  style="height:80px;"><%= "#{t 'decoding.character'}"%></h2>
    <p class="pad pad-top-minus" style="height: 100px;overflow:hidden;"><%= "#{t 'decoding.character-short'}"%></p>
    <div class="pad pad-top-minus">
      <%= link_to "#{t 'buttons.read_full'}", "#filter=.home%3Anot(.index2),+.post2", :class => "btn btn-reveal" %>
    </div>
  </div>
</article>

<article class="element  clearfix two-third post2">
  <div class="images"><%= image_tag("#{@theme}/index/index1.jpg") %>
  </div>
  <div class="content-bottom reveal-bg-one">
    <h2 class="pad pad-bottom-minus"><%= "#{t 'decoding.character'}"%></h2>
    <p class="pad pad-top-minus pad-bottom-minus">
      <%= (t 'decoding.character-full').html_safe %>
    </p>
   </div>
</article>